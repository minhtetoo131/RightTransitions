<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardElevation="@dimen/cardview_custom_elevation"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_large"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_related_news"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_publication_logo_placeholder"
            android:layout_margin="@dimen/margin_medium_3"/>
        <TextView
            android:id="@+id/tv_related_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crime In Hlaing"
            android:layout_toRightOf="@id/iv_related_news"
            android:layout_alignTop="@id/iv_related_news"
            android:textColor="@color/black_full"
            style="bold"
            />

        <TextView
            android:id="@+id/tv_related_news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_related_news"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:layout_toRightOf="@id/iv_related_news"
            android:layout_below="@id/tv_related_news_title"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>